  "version": "1.0.0",
  "description": "Backend API for API Radar - Real-time API key leak monitoring",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "api",
    "security",
    "monitoring",
    "fastify",
    "typescript"
  ],
  "author": "API Radar Team",
  "license": "MIT",
  "dependencies": {
